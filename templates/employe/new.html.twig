{% extends 'base.html.twig' %}

{% block title %}Ajouter un Employe{% endblock %}

{% block body %}

{% if edit %}
    <h1>Modifier un Employe</h1>
{% else %}
    <h1>Ajouter un Employe</h1>
{% endif %}
    
    
    {{ form_start(formAddEmploye) }}
        <div class="row">
            <div class="col-sm">
                {{form_row(formAddEmploye.nom)}}
            </div>
            <div class="col-sm">
                {{form_row(formAddEmploye.prenom)}}
            </div>
        </div>
        <div class="row">
            <div class="col-sm"> {{form_row(formAddEmploye.dateNaissance)}}</div>
            <div class="col-sm"> {{form_row(formAddEmploye.dateEmbauche)}}</div>
        </div>
       
        {{form_row(formAddEmploye.entreprise)}}
        {{form_row(formAddEmploye.ville)}}
        {{form_row(formAddEmploye.valider)}}
    {{form_end(formAddEmploye) }}

{% endblock %}
 